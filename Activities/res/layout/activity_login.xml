<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/main_header" />

    <RelativeLayout
        android:id="@+id/act_login_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.darly.activities.widget.intel.RectRestoreSurfaceView
            android:id="@+id/act_login_restore"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/app_login_shape"
        android:orientation="vertical" >

        <com.darly.activities.widget.clearedit.LoginClearEdit
            android:id="@+id/act_login_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/guide_show_back" />

        <com.darly.activities.widget.clearedit.LoginClearEdit
            android:id="@+id/act_login_pass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" />
    </LinearLayout>

    <Button
        android:id="@+id/act_login_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/app_btn_select"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>