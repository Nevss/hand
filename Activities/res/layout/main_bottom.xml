<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RadioGroup
        android:id="@+id/main_bottom_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/main_bottom_index"
            style="@style/RadioBase"
            android:drawableTop="@drawable/ic_menu"
            android:text="@string/index"
            android:textColor="@color/set_list_line" />

        <RadioButton
            android:id="@+id/main_bottom_local"
            style="@style/RadioBase"
            android:drawableTop="@drawable/ic_loacl"
            android:text="@string/loacl"
            android:textColor="@color/set_list_line" />

        <RadioButton style="@style/RadioBase" />

        <RadioButton
            android:id="@+id/main_bottom_search"
            style="@style/RadioBase"
            android:drawableTop="@drawable/ic_search"
            android:text="@string/search"
            android:textColor="@color/set_list_line" />

        <RadioButton
            android:id="@+id/main_bottom_set"
            style="@style/RadioBase"
            android:drawableTop="@drawable/ic_set"
            android:text="@string/set"
            android:textColor="@color/set_list_line" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/main_bottom_me"
        style="@style/RadioMe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_bottom_me_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ia_backe_close" />
    </LinearLayout>

</RelativeLayout>