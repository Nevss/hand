<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.darly.activities"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <com.darly.activities.widget.roundedimage.RoundedImageView
        android:id="@+id/item_grid_iv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:riv_border_color="@color/roundedimageview_color"
        app:riv_border_width="1dp"
        app:riv_corner_radius="20dp" />

    <TextView
        android:id="@+id/item_grid_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:singleLine="true" />

</LinearLayout>