<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.darly.activities.ui"
    android:id="@+id/index_fragment_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.darly.activities.widget.roundedimage.RoundedImageView
        android:id="@+id/chat_fragment_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:riv_border_color="@color/color_2"
        app:riv_border_width="1dp"
        app:riv_corner_radius="5dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chat_fragment_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/main_bottom_text"
            android:gravity="center" />

        <TextView
            android:id="@+id/chat_fragment_descrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/set_list_line"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>